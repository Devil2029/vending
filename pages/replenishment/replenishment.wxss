.sv{
  width: 100%;
  height: 90%;
  box-sizing:border-box;
}
.cargo-road{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  height: 200rpx;
  margin-top: 20rpx;
  align-items: center;
  background: white;
  border-top: 1rpx solid #979797;
  border-bottom: 1rpx solid #979797;
}
.product-img{
  width: 140rpx;
  height: 140rpx;
  margin-left: 20rpx;
  border: 1rpx solid #979797;
}
.right{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 30rpx
}
.first-row{
  display: flex;
  flex-direction: row;
  justify-content: space-between; 
  align-items: center;
}
.cargo-road-no{
  font-size: 24rpx;
  color: #D0021B;
}
.cargo-road-text{
  width: 400rpx;
  font-size: 24rpx;
}
.btn-config-product{
  background-color: transparent; 
  font-size: 20rpx;
  color: #D0021B;
}
.btn-config-product::after{ 
  border: none;
}
.product-desc{
  font-size: 24rpx;
  margin-top: 10rpx;
}
.save-config{
  border-radius: 0rpx;
  position: fixed;
  bottom: 0;
  width: 100%;
  background: #4A90E2;
  height: 94rpx;
  color: white;
}


.mask{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
}
.search-view{
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 1001;
  background: #fff;
}
.title{
  width: 100%;
  display: flex;
  margin: 20rpx;
}
.scan-view{
  display: flex;
  flex-direction: row;
  justify-content: center;
  width: 80rpx;
  height: 80rpx;
  background: white;
  border-radius: 10rpx;
  align-items: center;
}
.scan-ico{
  width: 38rpx;
  height: 38rpx;
}
.search-input{
  display: flex;
  flex-direction: row;
  width: 580rpx;
  height: 80rpx;
  margin-left: 20rpx;
  border-radius: 10rpx;
  background: white;
  align-items: center;
}
.search-ico{
  width: 31rpx;
  height: 32rpx;
  margin-left: 30rpx;
}
.serach-content{
  margin-left: 20rpx;
  font-size: 24rpx;
}
.goods-list{
  width: 100%;
  height: 73%;
}
.good{
  width: 100%;
  height: 140rpx;
  margin-bottom: 10rpx;
  display: flex;
  flex-direction: row;
  background: white;
  align-items: center;
}
.good-ico{
  width: 90rpx;
  height: 90rpx;
  margin-left: 45rpx;
}
.good-right{
  display: flex;
  flex-direction: column;
  margin-left: 75rpx;
}
.good-name{
  font-size: 24rpx;
  color: #323232;
}
.good-id{
  font-size: 24rpx;
  color: #9B9B9B;
  margin-top: 10rpx;
}