
.title{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding-left: 20rpx;
  padding-right: 20rpx;
  padding-top: 30rpx;
  padding-bottom: 10rpx;
  font-size: 24rpx;
  color: #323232;
}
.goods{
  width: 100%;
  height: 100%;
  padding: 20rpx;
}
.good{
  display: flex;
  flex-direction: column;
  float: left;
  width: 33.33333333%;
  box-sizing: border-box;
  margin-bottom: 30rpx;
}
.good-ico-p{
  position: relative;
  width: 200rpx;
  height: 150rpx;
  background-color: #DDDDDD;
}
.good-ico{
  position: absolute;
  width: 200rpx;
  height: 150rpx;
}
.sold-out-ico{
  position:absolute;
  width: 200rpx;
  height: 150rpx;
}
.good-name{
  font-size:20rpx;
  margin-top: 10rpx;
}
.good-spec{
  font-size: 18rpx;
}
.han-area{
  display: flex;
  flex-direction: row;
  width: 100%;
  justify-content: space-between;
  align-items: center;
}
.good-price{
  font-size: 30rpx;
  color: red;
} 
.btn-buy{
  color: red;
  font-size: 16rpx;
  border:1px solid red;
  float: right;
  border-radius: 5rpx;
  padding-left: 35rpx;
}
.btn-buy-negative{
  color: #979797;
  font-size: 16rpx;
  border:1px solid #979797;
  float: right;
  border-radius: 5rpx;
}
button{ background-color: transparent;}
button::after{ border: none;}

.view_hide{
 display: none;
}
.view_show{
 display: block;
}
.scan-view{
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%; 
  height: 73rpx; 
  border-bottom: #D8D8D8 solid 1rpx;
}
.scan-ico{
  width: 60rpx;
  height: 60rpx;
  margin-left: 48rpx; 
}
.scan-text{
  font-size: 24rpx;
  color: #323232;
  margin-left: 20rpx;
}
.scan-arrow{
  width: 12rpx;
  height: 24rpx;
  margin-left: 253rpx; 
  margin-right: 20rpx; 
}
.scan-img{
  width: 350rpx;
  height: 350rpx;
  margin-top: 285rpx;
  align-self: center;
}
.tip{
  font-size: 24rpx;
  color: #646464;
  align-self: center;
  margin-top: 30rpx;
}

.show-btn {
  margin-top: 100rpx;
  color: #22cc22;
}

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 9999;
  background: #f9f9f9;
  margin: -180rpx 105rpx;
  border-radius: 36rpx;
}

.modal-title {
  padding-top: 50rpx;
  font-size: 36rpx;
  color: #030303;
  text-align: center;
}

.modal-content {
  padding: 50rpx 32rpx;
  text-align: center;
}

.modal-input {
  display: flex;
  background: #fff;
  border: 2rpx solid #ddd;
  border-radius: 4rpx;
  font-size: 28rpx;
}


.input {
  width: 100%;
  height: 82rpx;
  font-size: 28rpx;
  line-height: 28rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  color: #333;
}

input-holder {
  color: #666;
  font-size: 28rpx;
}

.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid #dedede;
  font-size: 34rpx;
  line-height: 86rpx;
}

.btn-cancel {
  width: 50%;
  color: #666;
  text-align: center;
  border-right: 1px solid #dedede;
}

.btn-confirm {
  width: 50%;
  color: #ec5300;
  margin-left: 250rpx;
}
