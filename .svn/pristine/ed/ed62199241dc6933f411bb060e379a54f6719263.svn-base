
.title{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding-left: 20rpx;
  padding-right: 20rpx;
  padding-top: 30rpx;
  padding-bottom: 10rpx;
  font-size: 24rpx;
  color: #323232;
}
.goods{
  width: 100%;
  height: 100%;
  padding: 20rpx;
}
.good{
  display: flex;
  flex-direction: column;
  float: left;
  width: 33.33333333%;
  box-sizing: border-box;
  margin-bottom: 30rpx;
}
.good-ico-p{
  position: relative;
  width: 200rpx;
  height: 150rpx;
  background-color: #DDDDDD;
}
.good-ico{
  position: absolute;
  width: 200rpx;
  height: 150rpx;
}
.sold-out-ico{
  position:absolute;
  width: 200rpx;
  height: 150rpx;
}
.good-name{
  font-size:20rpx;
}
.good-spec{
  font-size: 18rpx;
}
.han-area{
  display: flex;
  flex-direction: row;
  width: 100%;
  justify-content: space-between;
  align-items: center;
}
.good-price{
  font-size: 30rpx;
  color: red;
} 
.btn-buy{
  color: red;
  font-size: 16rpx;
  border:1px solid red;
  float: right;
  border-radius: 5rpx;
}
.btn-buy-negative{
  color: #979797;
  font-size: 16rpx;
  border:1px solid #979797;
  float: right;
  border-radius: 5rpx;
}
button{ background-color: transparent;}
button::after{ border: none;}

.view_hide{
 display: none;
}
.view_show{
 display: block;
}
.scan-view{
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%; 
  height: 73rpx; 
  border-bottom: #D8D8D8 solid 1rpx;
}
.scan-ico{
  width: 24rpx;
  height: 24rpx;
  margin-left: 48rpx; 
}
.scan-text{
  font-size: 24rpx;
  color: #323232;
  margin-left: 20rpx;
}
.scan-arrow{
  width: 12rpx;
  height: 24rpx;
  margin-left: 404rpx; 
  margin-right: 20rpx; 
}
.scan-img{
  width: 180rpx;
  height: 156rpx;
  margin-top: 285rpx;
  align-self: center;
}
.tip{
  font-size: 24rpx;
  color: #646464;
  align-self: center;
  margin-top: 30rpx;
}